<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_game">
    <TextView
        android:id="@+id/scor_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_x="170dp"
        android:layout_y="15dp"/>
    <ImageView
        android:id="@+id/stop"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/stop"
        android:layout_x="0dp"
        android:layout_y="0dp"/>
    <ImageView
        android:id="@+id/fall1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/fall_obj1"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/fall4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/fall_obj2"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/fall2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/fall_obj2"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/fall3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/fall_obj3"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/fall5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/fall_obj1"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/stop_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/stop_view"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:alpha="0.5"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/restart_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/restart_view"
        android:layout_x="80dp"
        android:layout_y="270dp"
        android:alpha="0.5"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/restart"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/restart"
        android:layout_x="70dp"
        android:layout_y="265dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/start"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/text_start"
        android:layout_x="90dp"
        android:layout_y="300dp"
        android:visibility="gone"/>
</AbsoluteLayout>